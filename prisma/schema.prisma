generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String      @id
  name        String
  email       String
  image       String
  cart        Json        @default("{}")
  walletBalance Float     @default(0)
  Address     Address[]
  complaints  Complaint[]
  returns     Return[]
  notifications Notification[]
  buyerOrders Order[]     @relation("BuyerRelation")
  ratings     Rating[]
  store       Store?
  walletTransactions WalletTransaction[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  brand       String      @default("Unbranded")
  description String
  mrp         Float
  price       Float
  stockQty    Int         @default(1)
  sizes       String[]    @default([])
  colors      String[]    @default([])
  images      String[]
  audiences   String[]    @default([])
  category    String
  inStock     Boolean     @default(true)
  storeId     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  complaints  Complaint[]
  returns     Return[]
  orderItems  OrderItem[]
  store       Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)
  rating      Rating[]
}

model Order {
  id            String        @id @default(cuid())
  total         Float
  status        OrderStatus   @default(ORDER_PLACED)
  statusTimeline Json         @default("[]")
  userId        String
  storeId       String
  addressId     String
  isPaid        Boolean       @default(false)
  paymentMethod PaymentMethod
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  isCouponUsed  Boolean       @default(false)
  coupon        Json          @default("{}")
  complaints    Complaint[]
  returns       Return[]
  address       Address       @relation(fields: [addressId], references: [id])
  store         Store         @relation(fields: [storeId], references: [id])
  user          User          @relation("BuyerRelation", fields: [userId], references: [id])
  orderItems    OrderItem[]
}

model OrderItem {
  orderId   String
  productId String
  variantKey String @default("")
  size      String @default("")
  color     String @default("")
  quantity  Int
  price     Float
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@id([orderId, productId, variantKey])
}

model Rating {
  id        String   @id @default(cuid())
  rating    Int
  review    String
  userId    String
  productId String
  orderId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, orderId])
}

model Address {
  id        String   @id @default(cuid())
  userId    String
  name      String
  email     String
  street    String
  city      String
  state     String
  zip       String
  country   String
  phone     String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Order     Order[]
}

model Coupon {
  code        String   @id
  description String
  discount    Float
  forNewUser  Boolean
  forMember   Boolean  @default(false)
  isPublic    Boolean
  expiresAt   DateTime
  createdAt   DateTime @default(now())
}

model NewsletterSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model AdminAuditLog {
  id          String   @id @default(cuid())
  adminUserId String
  action      String
  targetType  String
  targetId    String
  details     Json     @default("{}")
  createdAt   DateTime @default(now())
}

model EmailLog {
  id         String   @id @default(cuid())
  recipient  String
  subject    String
  eventType  String
  status     String
  error      String   @default("")
  createdAt  DateTime @default(now())
}

model Store {
  id          String      @id @default(cuid())
  userId      String      @unique
  name        String
  description String
  username    String      @unique
  address     String
  status      String      @default("pending")
  isActive    Boolean     @default(false)
  logo        String
  email       String
  contact     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  complaints  Complaint[]
  returns     Return[]
  Order       Order[]
  Product     Product[]
  user        User        @relation(fields: [userId], references: [id])
}

model Complaint {
  id          String          @id @default(cuid())
  userId      String
  orderId     String
  productId   String
  storeId     String
  subject     String
  description String
  status      ComplaintStatus @default(OPEN)
  adminNote   String          @default("")
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  order       Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  store       Store           @relation(fields: [storeId], references: [id], onDelete: Cascade)
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, orderId, productId])
}

model Return {
  id          String       @id @default(cuid())
  userId      String
  orderId     String
  productId   String
  storeId     String
  reason      String
  description String
  status      ReturnStatus @default(REQUESTED)
  statusTimeline Json      @default("[]")
  pickupDate  DateTime?
  pickupWindow String      @default("")
  pickupAddress String     @default("")
  pickupNote  String       @default("")
  pickupReminderSentAt DateTime?
  adminNote   String       @default("")
  refundAmount Float       @default(0)
  refundedAt  DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  order       Order        @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product      @relation(fields: [productId], references: [id], onDelete: Cascade)
  store       Store        @relation(fields: [storeId], references: [id], onDelete: Cascade)
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, orderId, productId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String
  type      String   @default("general")
  meta      Json     @default("{}")
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WalletTransaction {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  type      String
  reason    String   @default("")
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum OrderStatus {
  ORDER_PLACED
  PROCESSING
  SHIPPED
  DELIVERED
}

enum PaymentMethod {
  COD
  STRIPE
  WALLET
}

enum ComplaintStatus {
  OPEN
  IN_REVIEW
  RESOLVED
  REJECTED
}

enum ReturnStatus {
  REQUESTED
  APPROVED
  PICKED_UP
  REFUNDED
  REJECTED
}
